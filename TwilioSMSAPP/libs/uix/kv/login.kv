<Login_Screen>:
    name: "login"
    
    MDLabel:
        text: app.APP_NAME
        halign: "center"
        pos_hint: {"center_y": .8}
        font_style: "H3"

    MDLabel:
        text: "Log in"
        halign: "center"
        pos_hint: {"center_y":.73}
        font_style: "Subtitle2"
        
    MDTextField:
        id: username_field
        hint_text: "Username"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        line_color_focus: "#4a4939"
        hint_text_color_focus: "#4a4939"
        text_color_focus: "#4a4939"
        size_hint_x: .4
        # mode: "rectangle"
    
    MDTextField:
        id: password_field
        hint_text: "Password"
        pos_hint: {"center_x":0.5, "center_y":0.57}
        line_color_focus: "#4a4939"
        hint_text_color_focus: "#4a4939"
        text_color_focus: "#4a4939"
        size_hint_x: .4
        password: True
        # mode: "rectangle"
    
    MDRaisedButton:
        text: "Login"
        md_bg_color: "#e7e4c0"
        text_color: "#4a4939"
        pos_hint: {"center_x": 0.5, "center_y":0.48}
        size_hint_x: .5
        on_release: 
            app.screen_manager.change_screen("home") if root.app_login(username_field,password_field) else print()

    MDTextButton:
        text: f"Don't have an account Sign up"
        markup: True
        pos_hint: {"center_x":0.5, "center_y":0.33}
        on_release: app.screen_manager.change_screen("signup")
    
    MDLabel:
        text: f"[font=Roboto]{app.COMPANY_NAME}[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}
        
        
        